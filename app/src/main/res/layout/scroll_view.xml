<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <View
            android:id="@+id/ViewGalben"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:paddingTop="15dp"
            android:background="#FFFF00"/>
        <View
            android:id="@+id/ViewAlb"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_toEndOf="@id/ViewGalben"
            android:background="#FFFFFF"/>
        <View
            android:id="@+id/ViewVerdeDeschis"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toEndOf="@id/ViewAlb"
            android:background="#90EE90"/>
        <View
            android:id="@+id/ViewVerde"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toEndOf="@id/ViewVerdeDeschis"
            android:background="#00FF00"/>
        <View
            android:id="@+id/ViewAlb2"
            android:layout_width="35dp"
            android:layout_height="70dp"
            android:layout_toEndOf="@id/ViewVerde"
            android:background="#FFFFFF"/>
        <View
            android:id="@+id/ViewRosu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_toEndOf="@id/ViewAlb2"
            android:background="#FF0000"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_view_text"
            android:layout_below="@id/ViewGalben"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_view_text"
            android:layout_below="@id/textView1"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_view_text"
            android:layout_below="@id/textView2"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/textView4"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_view_text"
            android:layout_below="@id/textView3"
            android:textSize="18sp"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_view_text"
            android:layout_below="@id/textView4"
            android:textSize="18sp"/>

    </RelativeLayout>

</ScrollView>